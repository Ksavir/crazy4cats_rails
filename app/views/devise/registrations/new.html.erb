<div class="border p-3 rounded-4">
  <h2 class="mb-3 display-5">Sign up to Crazy4Cats</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, class: "d-block mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100 p-2 rounded-2 border-0" %>
    </div>
    <div class="field my-2">
      <%= f.label :password, class: "d-inline" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"w-100 p-2 rounded-2 border-0 mt-2" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, class: "d-block" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-100 p-2 rounded-2 border-0" %>
    </div>
    <div class="actions d-flex align-items-center gap-5">
      <%= f.submit "Sign up", class: "btn btn-outline-warning mt-2" %>
      <div class="pt-1">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>

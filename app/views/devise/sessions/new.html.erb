<div class="border p-3 rounded-4">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "d-block" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100 p-2 rounded-2 border-0 mt-2" %>
    </div>
    <div class="field">
      <%= f.label :password, class: "d-block" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"w-100 p-2 rounded-2 border-0 mt-2" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions d-flex align-items-center justify-content-between">
      <%= f.submit "Log in", class: "btn btn-outline-warning mt-2" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
